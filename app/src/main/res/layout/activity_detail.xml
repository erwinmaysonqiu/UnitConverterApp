<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvUnitFirst"
        android:layout_width="122dp"
        android:layout_height="26dp"
        android:layout_marginStart="12dp"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/UnitFirst"
        app:layout_constraintTop_toTopOf="@+id/UnitFirst" />

    <TextView
        android:id="@+id/tvUnitSecond"
        android:layout_width="123dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/UnitSecond"
        app:layout_constraintTop_toTopOf="@+id/UnitSecond" />

    <TextView
        android:id="@+id/UnitFirst"
        android:layout_width="72dp"
        android:layout_height="24dp"
        android:layout_marginTop="36dp"
        android:text="Unit 1:"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tvOutput"
        app:layout_constraintTop_toBottomOf="@+id/tvOutput" />

    <TextView
        android:id="@+id/UnitSecond"
        android:layout_width="69dp"
        android:layout_height="26dp"
        android:layout_marginTop="12dp"
        android:text="Unit 2:"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/UnitFirst"
        app:layout_constraintTop_toBottomOf="@+id/UnitFirst" />

    <Button
        android:id="@+id/btnReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:text="Return"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvOutput" />

    <TextView
        android:id="@+id/tvOutput"
        android:layout_width="277dp"
        android:layout_height="35dp"
        android:layout_marginTop="184dp"
        android:background="#E4E4E4"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#121212"
        android:textSize="24sp"
        android:textStyle="bold"
        app:flow_horizontalAlign="center"
        app:flow_verticalAlign="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="67dp"
        android:layout_height="29dp"
        android:layout_marginBottom="4dp"
        android:text="Result:"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/tvOutput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>